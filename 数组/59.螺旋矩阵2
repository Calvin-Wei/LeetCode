//æœ€ä¼˜è§£æ³•ï¼ŒèŠ‚çœå†…å­˜æ¶ˆè€—
class Solution {
    public int[][] generateMatrix(int n) {
        int[][] matrix=new int[n][n];
        int index=1,max=n*n;
        //aæ˜¯æ¨ªåæ ‡æœ€å°,bæ˜¯çºµåæ ‡æœ€å°,tå’Œlä»£è¡¨æ¨ªçºµåæ ‡æœ€å¤§å€¼
        int a=0,t=n-1,b=0,l=n-1;
        while(index<=max){
            //left to right
            for(int i=b;i<=l;i++){
                matrix[a][i]=index++;
            }
            a++;
            //top to bottom
            for(int i=a;i<=t;i++){
                matrix[i][l]=index++;
            }
            l--;
            //right to left
            for(int i=l;i>=b;i--){
                matrix[t][i]=index++;
            }
            t--;
            //bottom to top
            for(int i=t;i>=a;i--){
                matrix[i][b]=index++;
            }
            b++;
        }
        return matrix;
    }
}
